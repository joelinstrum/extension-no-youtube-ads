{
  "manifest_version": 3,
  "name": "Youtube:NoAds",
  "version": "1.6",
  "description": "A Chrome extension to eliminate those shitty ads.",
  "permissions": ["activeTab", "storage", "webNavigation", "webRequest"],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "app-icon.png",
    "128": "app-icon.png"
  },
  "action": {
    "default_icon": "app-icon.png"
  }
}
